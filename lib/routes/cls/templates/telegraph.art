{{ if level === 'A' }}
<div style="background: #fff1f0; border-left: 3px solid #ff4d4f; padding: 8px 12px; margin-bottom: 10px; border-radius: 3px;">
    <strong style="color: #ff4d4f;">🔴 重要</strong>
</div>
{{ else if level === 'B' }}
<div style="background: #fffbe6; border-left: 3px solid #faad14; padding: 8px 12px; margin-bottom: 10px; border-radius: 3px;">
    <strong style="color: #faad14;">🟡 一般</strong>
</div>
{{ else if level === 'C' }}
<div style="background: #f0f0f0; border-left: 3px solid #d9d9d9; padding: 8px 12px; margin-bottom: 10px; border-radius: 3px;">
    <strong style="color: #8c8c8c;">⚪ 普通</strong>
</div>
{{ /if }}

{{ if author }}
<p><strong>作者：</strong>{{ author }}</p>
{{ /if }}

{{ if stock_list && stock_list.length > 0 }}
<div style="background: #f5f5f5; border-left: 3px solid #1890ff; padding: 10px 15px; margin: 10px 0; border-radius: 4px;">
    <strong style="color: #333;">📊 相关股票</strong>
    {{ each stock_list stock }}
    <div style="margin-top: 8px; padding: 8px; background: white; border-radius: 3px;">
        <span style="font-weight: bold; color: #333;">{{ stock.name }}</span>
        <span style="color: #666; font-size: 0.9em;">({{ stock.StockID }})</span>
        <br>
        <span style="font-size: 0.95em;">价格: <strong>¥{{ stock.last }}</strong></span>
        {{ if stock.RiseRange > 0 }}
        <span style="color: #f5222d; font-weight: bold; margin-left: 10px;">↑ {{ stock.RiseRange }}%</span>
        {{ else if stock.RiseRange < 0 }}
        <span style="color: #52c41a; font-weight: bold; margin-left: 10px;">↓ {{ stock.RiseRange }}%</span>
        {{ else }}
        <span style="color: #666; margin-left: 10px;">— 0.00%</span>
        {{ /if }}
    </div>
    {{ /each }}
</div>
{{ /if }}

{{ if item.content }}
{{ item.content }}
{{ /if }}

{{ if images && images.length > 0 }}
<br>
{{ each images img }}
<img src="{{ img }}" style="max-width: 100%; height: auto;">
{{ /each }}
{{ /if }}

{{ if assocArticleUrl }}
<div style="background: #f6ffed; border-left: 3px solid #52c41a; padding: 10px 15px; margin: 15px 0; border-radius: 4px;">
    <strong style="color: #52c41a;">📄 相关公告</strong>
    <br>
    <a href="{{ assocArticleUrl }}" target="_blank" style="color: #1890ff; text-decoration: none;">
        点击查看原始公告文档 →
    </a>
</div>
{{ /if }}

